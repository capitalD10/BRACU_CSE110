      "source": [
        "inp = int(input())\n",
        "sum = 0\n",
        "prime = 0\n",
        "for x in range(1, inp+1):\n",
        "  if inp % x ==0:\n",
        "    sum += x\n",
        "    prime += 1\n",
        "p_num = sum-inp\n",
        "if p_num == inp:\n",
        "  print(inp, \"is a perfect number\" )\n",
        "elif prime == 2:\n",
        "  print(inp, \"is a prime number\")\n",
        "else:\n",
        "  print(inp, \"is not a prime or perfect number\")"
      ]
    }
